<%- include('../partials/header') %>

<div class="container mt-4">
    <h1 class="mb-4">All Listings</h1>
    
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% listings.forEach(listing => { %>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="card-text text-muted mb-2">
                            <i class="fas fa-map-marker-alt me-1"></i>
                            <%= listing.location %>, <%= listing.country %>
                        </p>
                        <p class="card-text">
                            <strong class="text-success">â‚¹<%= listing.price.toLocaleString() %></strong> /night
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary btn-sm w-100">View Details</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('../partials/footer') %> 